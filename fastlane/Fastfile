# fastlane/Fastfile

platform :mac do
  before_all do
    setup_circle_ci
  end

  desc "Run Tests In Mac"
  lane :test do
    run_tests(
      scheme: "macOS_CI",
      force_quit_simulator: true,
      include_simulator_logs: false,
      clean: true
    )
  end
end

platform :ios do
  before_all do
    setup_circle_ci
  end

  desc "Run Tests On iOS Simulator"
  lane :test do
    run_tests(
      scheme: "iOS_CI",
      device: "iPhone 15"
    )
  end
end